#!/usr/bin/env bash
# Crop the tile maps. For definitions of such tiles, refer to src/main/scala/TileMap.scala.
# See README.md for how to download maps.

### Map for Three Kingdoms
mapdir=../res/drawable
tile=256

## Only enable one set of parameters below

# Parameter set for Natural Earth map.
#lat=8
#lon=8
#west=16650
#north=2450
#file=NE2_HR_LC_SR_W_DR.tif

# Parameter set for Blue Marble map.
lat=16
lon=16
west=11700     # (16650-21600/2) * 2
north=5000     # 2450 * 2
file=land_shallow_topo_east.tif

convert $file -crop $((lon*tile))x$((lat*tile))+${west}+${north} china.png

for (( i=0; i<$lon; i++ ))
do
    for (( j=0; j<$lat; j++ ))
    do 
        convert china.png -crop ${tile}x${tile}+$((west+i*tile))+$((north+j*tile)) $mapdir/map_0_${i}_${j}.png
    done
done

# Map for Tang dynasty. We may eventually use this big map (Natural Earth). 
# But for now, let's save the space.
# convert NE2_HR_LC_SR_W_DR.tif -crop 6144x3072+13500+1500 china.png
